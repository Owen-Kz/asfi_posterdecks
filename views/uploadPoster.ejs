    <div class="fixed bottom-8 right-8 bg-primary-600 text-white rounded-full w-12 h-12 flex items-center justify-center shadow-lg hover:bg-primary-700 cursor-pointer transition-colors duration-200">
        <i class="fas fa-arrow-up"></i>
    </div>
</body>
</html>