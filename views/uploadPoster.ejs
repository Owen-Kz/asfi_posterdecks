    <script>
        
        document.addEventListener('DOMContentLoaded', function () {
            var loaderOverlay = document.getElementById('loader-overlay');
            
            // Hide loader when page is ready
            setTimeout(function() {
                loaderOverlay.style.opacity = 0;
                loaderOverlay.style.visibility = 'hidden';
            }, 1000);

            // Initialize custom select
            initializeCustomSelect();
            
            // Initialize file upload
            initializeFileUpload();
        });

        function togglePasswordField() {
            const passwordField = document.getElementById('posterSecretId');
            const eyeIcon = document.getElementById('togglePassword');
            
            if (passwordField.type === "password") {
                passwordField.type = "text";
                eyeIcon.innerHTML = '<i class="fas fa-eye-slash"></i>';
            } else {
                passwordField.type = "password";
                eyeIcon.innerHTML = '<i class="fas fa-eye"></i>';
            }
        }

        function initializeCustomSelect() {
            const searchInput = document.getElementById('meetingSearch');
            const dropdown = document.getElementById('meetingDropdown');
            const hiddenInput = document.getElementById('eventTitle');
            let meetings = [];

            // Fetch meetings data
            fetch("/allchannels", {
                method: "GET"
            }).then(res => res.json())
            .then(data => {
                const AllChannelsData = JSON.parse(data.ChannelData);
                meetings = AllChannelsData;

                if (AllChannelsData.length > 0) {
                    populateDropdown(AllChannelsData);
                } else {
                    dropdown.innerHTML = '<div class="select-option text-gray-500">No meetings available</div>';
                }
            });

            function populateDropdown(meetingsData) {
                dropdown.innerHTML = meetingsData.map(meeting => 
                    `<div class="select-option" data-value="${meeting.channel}">${meeting.title}</div>`
                ).join('');
            }

            // Show dropdown on focus
            searchInput.addEventListener('focus', function() {
                dropdown.style.display = 'block';
            });

            // Hide dropdown when clicking outside
            document.addEventListener('click', function(e) {
                if (!searchInput.contains(e.target) && !dropdown.contains(e.target)) {
                    dropdown.style.display = 'none';
                }
            });

            // Filter meetings on input
            searchInput.addEventListener('input', function(e) {
                const searchTerm = e.target.value.toLowerCase();
                const filteredMeetings = meetings.filter(meeting => 
                    meeting.title.toLowerCase().includes(searchTerm)
                );
                populateDropdown(filteredMeetings);
            });

            // Handle option selection
            dropdown.addEventListener('click', function(e) {
                if (e.target.classList.contains('select-option')) {
                    const selectedValue = e.target.getAttribute('data-value');
                    const selectedText = e.target.textContent;
                    
                    searchInput.value = selectedText;
                    hiddenInput.value = selectedValue;
                    dropdown.style.display = 'none';
                    
                    // Add visual feedback
                    document.querySelectorAll('.select-option').forEach(opt => {
                        opt.classList.remove('selected');
                    });
                    e.target.classList.add('selected');
                }
            });
        }

        function initializeFileUpload() {
            const fileInput = document.getElementById('PosterPDF');
            const fileUploadArea = document.getElementById('fileUploadArea');
            const fileInfo = document.getElementById('fileInfo');
            const maxSize = 25 * 1024 * 1024; // 25MB

            fileInput.addEventListener('change', function(e) {
                handleFileSelection(e.target.files[0]);
            });

            // Drag and drop functionality
            fileUploadArea.addEventListener('dragover', function(e) {
                e.preventDefault();
                fileUploadArea.classList.add('dragover');
            });

            fileUploadArea.addEventListener('dragleave', function() {
                fileUploadArea.classList.remove('dragover');
            });

            fileUploadArea.addEventListener('drop', function(e) {
                e.preventDefault();
                fileUploadArea.classList.remove('dragover');
                const files = e.dataTransfer.files;
                if (files.length > 0) {
                    handleFileSelection(files[0]);
                    fileInput.files = files;
                }
            });

            function handleFileSelection(file) {
                if (file) {
                    if (file.size > maxSize) {
                        showMessage('File size exceeds 25MB limit. Please choose a smaller file.', 'error');
                        fileInput.value = '';
                        return;
                    }

                    if (file.type !== 'application/pdf') {
                        showMessage('Please select a PDF file.', 'error');
                        fileInput.value = '';
                        return;
                    }

                    const fileSize = (file.size / (1024 * 1024)).toFixed(2);
                    fileInfo.innerHTML = `
                        <div class="flex items-center justify-between bg-green-50 border border-green-200 rounded-lg p-3">
                            <div class="flex items-center">
                                <i class="fas fa-file-pdf text-green-500 text-xl mr-3"></i>
                                <div>
                                    <div class="font-medium text-green-800">${file.name}</div>
                                    <div class="text-green-600 text-sm">${fileSize} MB</div>
                                </div>
                            </div>
                            <button type="button" onclick="clearFileSelection()" class="text-green-600 hover:text-green-800">
                                <i class="fas fa-times"></i>
                            </button>
                        </div>
                    `;
                    fileInfo.classList.remove('hidden');
                }
            }
        }

        function clearFileSelection() {
            const fileInput = document.getElementById('PosterPDF');
            const fileInfo = document.getElementById('fileInfo');
            fileInput.value = '';
            fileInfo.classList.add('hidden');
        }

        function showMessage(message, type) {
            const existingMessage = document.querySelector('.success-message, .error-message');
            if (existingMessage) {
                existingMessage.remove();
            }

            const messageDiv = document.createElement('div');
            messageDiv.className = type === 'error' ? 'error-message' : 'success-message';
            messageDiv.innerHTML = `
                <div class="flex items-center">
                    <i class="fas ${type === 'error' ? 'fa-exclamation-triangle' : 'fa-check-circle'} mr-2"></i>
                    ${message}
                </div>
            `;

            document.querySelector('form').insertBefore(messageDiv, document.querySelector('form').firstChild);
            
            setTimeout(() => {
                messageDiv.remove();
            }, 5000);
        }

        // Password validation (your existing code)
        const KeyMessage = document.getElementById("KeyMessage");
        const PosteEventId = document.getElementById("posterSecretId");
        
        PosteEventId.addEventListener("change", function(){
            if(PosteEventId.value !== ""){
                fetch(`/validateKey/${PosteEventId.value}`, {
                    method: "GET"
                }).then(res => res.json())
                .then(data =>{
                    if(data.status === "error"){
                        KeyMessage.innerHTML = `
                            <div class="error-message">
                                <i class="fas fa-exclamation-circle mr-2"></i>
                                ${data.message}
                            </div>
                        `;
                    }else if(data.status === "valid"){
                        KeyMessage.innerHTML = `
                            <div class="success-message">
                                <i class="fas fa-check-circle mr-2"></i>
                                ${data.message}
                            </div>
                        `;
                    }
                });
            }else{
                KeyMessage.innerHTML = `
                    <div class="error-message">
                        <i class="fas fa-exclamation-circle mr-2"></i>
                        Poster ID Number cannot be empty
                    </div>
                `;
            }
        });
    </script>

