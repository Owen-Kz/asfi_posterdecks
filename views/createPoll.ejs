    <div class="new-poll-head">
        <h4>CREATE A NEW POLL</h4>
    </div>
    
    <form method="post" class="createPollForm">
        <select class="form-control" name="meetingId" id="eventTitle" required>
            <option value="">Select Event you want to add the deck to</option>
        </select>

        <label for="question">What would you like to ask?</label>
        <input type="text" name="question" id="question">

        <label for="options">Add Options</label>
        <div id="optionsContainer">
            <input type="text" name="options" class="optionInput" placeholder="option 1">
            <input type="text" name="options" class="optionInput" placeholder="option 2">
        </div>
        <button type="button" class="add-more" onclick="addOption()">+ Add More</button>

        <input type="submit" id="submitPoll" hidden>

        <button type="button" id="submitForm">Submit Poll</button>
    </form>
   <script src="/js/AllChannels.js"></script>
   <script src="/js/polls/createPoll.js"></script>
   <script>
    let number = 2
    function addOption() {
        
        number++
        var optionsContainer = document.getElementById('optionsContainer');
        var input = document.createElement('input');
        input.type = 'text';
        input.name = 'options';
        input.className = 'optionInput';
        input.placeholder = `option ${number}`;
        optionsContainer.appendChild(input);
    }
</script>

