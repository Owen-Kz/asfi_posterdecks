    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .createPollForm {
            display: flex;
            flex-direction: column;
            width: 50%;
            max-height: 600px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 50px;
            box-sizing: border-box;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        label {
            font-weight: bold;
            margin-bottom: 8px;
        }

        input[type="text"] {
            width: calc(100% - 22px);
            padding: 10px;
            margin-bottom: 15px;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
            display: inline-block;
        }

        button {
            padding: 10px;
            background-color: rgb(128, 0, 122);
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .add-more {
            padding: 10px;
            background-color: rgb(30, 31, 30);
            width: 20%;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .add-more:hover {
            background-color: rgb(187, 186, 186);
            color: black;
        }

        button:hover {
            background-color: rgb(128, 0, 122);
        }

        #submitForm {
            margin-top: 20px;
        }

        .new-poll-head {
            width: 30%;
            margin: 0 auto;
            text-align: center;
            margin-top: 40px;
        }
        .new-poll-head h4 {
            color: rgba(48, 47, 47, 0.932);
        }
    </style>
