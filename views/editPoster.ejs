<section>
	<div class="container">
		<div class="row">
			<div class="col-md-8 mx-auto text-center">
				<h4>Edit Poster</h4>
			</div>
		</div>
        <br>

		<div class="card-body">
		<!-- Step 1 content START -->
		<div class="content">
			<!-- Title -->
			

			<hr> <!-- Divider -->
			
			<!-- Basic information START -->
			<div class="row g-4">
				<form id="createPosterDeckForm" enctype="multipart/form-data" action="/editdeck" method="post">
				<!-- Event title -->
				<div class="col-12">
					<label class="form-label">Meeting*</label>
					<div class="dropdown">
						<select class="form-control" name="eventTitle" id="eventTitle" required>
							<option value="<%=PosterMeeting%>">Select Meeting you want to add the deck to</option>
							
						</select>
						
					</div>
				</div>

				<div class="col-12">
					<label class="form-label">Poster ID*</label>
					<div class="dropdown-id">
						<input class="form-control" type="password" name="posterSecretId" id="posterSecretId" value="<%= PosterId %>" required readonly>
						<!-- <span id="togglePassword" class="password-toggle" onclick="togglePasswordField()"><svg xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 576 512">! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc.<path d="M288 32c-80.8 0-145.5 36.8-192.6 80.6C48.6 156 17.3 208 2.5 243.7c-3.3 7.9-3.3 16.7 0 24.6C17.3 304 48.6 356 95.4 399.4C142.5 443.2 207.2 480 288 480s145.5-36.8 192.6-80.6c46.8-43.5 78.1-95.4 93-131.1c3.3-7.9 3.3-16.7 0-24.6c-14.9-35.7-46.2-87.7-93-131.1C433.5 68.8 368.8 32 288 32zM144 256a144 144 0 1 1 288 0 144 144 0 1 1 -288 0zm144-64c0 35.3-28.7 64-64 64c-7.1 0-13.9-1.2-20.3-3.3c-5.5-1.8-11.9 1.6-11.7 7.4c.3 6.9 1.3 13.8 3.2 20.7c13.7 51.2 66.4 81.6 117.6 67.9s81.6-66.4 67.9-117.6c-11.1-41.5-47.8-69.4-88.6-71.1c-5.8-.2-9.2 6.1-7.4 11.7c2.1 6.4 3.3 13.2 3.3 20.3z"/></svg></span> -->
					</div>
					<div id="KeyMessage" style="display:none;"></div>
				</div>
				<!-- Poster Title  -->
				<div class="col-12">
					<label class="form-label">Poster Title*</label>
					<div class="dropdown">
						<input class="form-control" type="text" name="deckTitle" id="deckTitle" value="<%= PosterTitle %>" required>
						
					</div>
				</div>

				<!-- Short description -->
				<!-- <div class="col-12">
					<label class="form-label">Abstract</label>
					<textarea class="form-control" name="shortDescription" id="shortDescription" rows="10" placeholder="Enter A description for your presentation" required></textarea>
				</div> -->

				<!-- Presenter Name -->
				<div class="col-12">
					<label class="form-label">Presenter Prefix*</label>
					<div class="dropdown">
						<select class="form-control" name="PresenterPrefix" id="PresenterPrefix">
							<option value="<%= prefix  %>"><%= prefix  %></option>
							<option value="N/A">Select your preffered prefix (if any)</option>
							<option value="Prof">Prof</option>
							<option value="Dr">Dr</option> 
							<option value="Mr">Mr</option>
							<option value="Mrs">Mrs</option>
							<option value="Miss">Mis</option>
							
						</select>
						
					</div>
				</div>
				<div class="col-12">
					<label class="form-label">Presenter Name*</label>
					<input class="form-control" type="text" name="presenterName" id="presenterName" value="<%=firstname%> <%= lastname %>" required>
				</div>

				<!-- Presenter Email -->
				<div class="col-12">
					<label class="form-label">Presenter Email Address*</label>
					<input class="form-control" type="email" name="presenterEmail" id="presenterEmail" value="<%= email  %>" required>
				</div>

				<div class="col-12">
					<label class="form-label">Affiliation*</label>
					<input class="form-control" type="text" name="presenterAffiliation" id="presenterAffiliation" value="<%= affiliation %>" required>
				</div>
				<div class="col-12">
					<label class="form-label">Country *</label>
					<input class="form-control" type="text" name="presenterCountry" id="presenterCountry" value="<%= country %>" required>
				</div>

				<div class="col-12" style="display: none;">
					<label class="form-label">Upload Your Picture (10Mb limit)</label>
					<div class="input-group mb-3">
						<input type="file" class="form-control" id="PresenterPic" value="avatar.jpg" name="PresenterPic" accept=".jpg, .jpeg, .png" >
						<label class="input-group-text">.jpg/.jpeg/.png</label>
					</div>
				</div>

				<div class="col-12">
					<label class="form-label">Your Poster</label>
					<p>Please consider accessibility when making your poster PDF, by ensuring text is selectable and images are described (for screen readers).</p>
				</div>

				<div class="col-12">
					<label class="form-label">Upload a PDF now (25Mb limit)</label>
					<div class="input-group mb-3">
						<input type="file" class="form-control" id="PosterPDF" name="PosterPDF" accept=".pdf" required>
						<label class="input-group-text">.pdf</label>
					</div>
				</div>

          
				<input type="submit" id="submitPoster" hidden/>
				<!-- Step 1 button -->
				<div class="d-flex justify-content-between mt-3">
					<a href="/logout">
						<button type="button" class="btn btn-primary next-btn mb-0">Cancel and Logout</button>
					</a>

					<button type="submit" class="btn btn-primary next-btn mb-0">Submit</button>
				</div>
			</div>
			<!-- Basic information START -->
		</div>
		<!-- Step 1 content END -->
	</form>
	</div>

		
		</div>
	</div>
</section>
