			</div>

			<!-- Modal body -->
			<div class="modal-body" id="edit_section">
	          <div class="container">

				<div class="card-body">
					<!-- Step 1 content START -->
					<div class="content">
						<!-- Title -->
                    <form action="">
						<!-- Basic information START -->
						<div class="row g-4">
							<!-- Event title -->
							<div class="col-12">
								<label class="form-label">Name</label>
								<input class="form-control" type="text" name="eventTitle" id="eventTitle"  placeholder="Enter event title">
							</div>

							<!-- Event organizer -->
							<div class="col-12">
								<label class="form-label">Email Address</label>
								<input class="form-control" type="text" name="eventOrganizer" id="eventOrganizer" value="">
							</div>
					
						</div>
						<!-- Basic information START -->
					</div>
					<!-- Step 1 content END -->
				</div>
				<!-- Modal footer -->
			<div class="modal-footer">
				<button type="button" id="submitModal" class="btn btn-warning-soft my-0">Save</button>
			</div>

		
		      </div>
			</form>
