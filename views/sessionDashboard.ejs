<!--Edit Modal Start-->
<div class="modal fade" id="editAction" tabindex="-1" aria-labelledby="appDetaillabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-lg">
		<div class="modal-content">
			
			<!-- Modal header -->
			<div class="modal-header bg-dark">
				<h5 class="modal-title text-white" id="appDetaillabel">Edit Session</h5>
				<button type="button" class="btn btn-sm btn-light mb-0" data-bs-dismiss="modal" aria-label="Close"><i class="bi bi-x-lg"></i></button>
			</div>

			<!-- Modal body -->
			<div class="modal-body" id="edit_section">
	<div class="container">

		<div class="card-body">
		<!-- Step 1 content START -->
		<div class="content">
			<!-- Title -->

			<!-- Basic information START -->
			<div class="row g-4">
				<form action="">
				<!-- Event title -->
				<div class="col-12">
					<label class="form-label">Event title*</label>
					<input class="form-control" type="text" name="eventTitle" id="eventTitle"  placeholder="Enter event title">
				</div>

				<!-- Event organizer -->
				<div class="col-12">
					<label class="form-label">Organizer*</label>
					<input class="form-control" type="text" name="eventOrganizer" id="eventOrganizer" value="">
				</div>

				<!-- Short description -->
				<div class="col-12">
					<label class="form-label">Short description</label>
					<textarea class="form-control" name="shortDescription" id="shortDescription" rows="10" placeholder="Enter keywords"></textarea>
				</div>

				<!-- Date of Event -->
				<div class="col-12">
					<label class="form-label">Start Date*</label>
					<input class="form-control" type="date" name="startDate" id="startDate" value="">
				</div>

				<!-- Event URL -->
				<div class="col-12">
					<label class="form-label">Event URL</label>
					<input class="form-control" type="text" name="eventURL" id="eventURL" value="" placeholder="https://">
				</div>
          
			</div>
			<!-- Basic information START -->
		</div>
		<!-- Step 1 content END -->
	</div>
	<!-- Modal footer -->
	<div class="modal-footer">
		<button type="button" id="submitModal" class="btn btn-warning-soft my-0">Submit</button>
	</div>

		
		</div>
	</div>
			</div>

			
		</div>
	</form>
	</div>
</div> 
<!--Edit Modal End-->


