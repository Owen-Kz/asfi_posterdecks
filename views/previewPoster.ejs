<script>
// Related Posters functionality
let currentPostersPage = 1;
let totalPostersPages = 1;
const postersPerPage = 8;

function loadRelatedPosters(page = 1) {
    const loadingEl = document.getElementById('postersLoading');
    const gridEl = document.getElementById('postersGrid');
    const emptyEl = document.getElementById('postersEmpty');
    const errorEl = document.getElementById('postersError');
    const loadMoreEl = document.getElementById('loadMoreContainer');
    
    // Show loading, hide others
    loadingEl.classList.remove('hidden');
    gridEl.classList.add('hidden');
    emptyEl.classList.add('hidden');
    errorEl.classList.add('hidden');
    loadMoreEl.classList.add('hidden');
    
    console.log("Fetching posters for meeting:", '<%=meeting%>');
    
    fetch(`/getposterdecks/<%=meeting%>?page=${page}&limit=${postersPerPage}`)
        .then(response => {
            console.log("POSTER RESPONSE STATUS:", response.status);
            if (!response.ok) {
                throw new Error(`HTTP ${response.status}`);
            }
            return response.json();
        })
        .then(data => {
            console.log("POSTER DATA", data);
            if (data.success) {
                const posters = JSON.parse(data.PosterDecks);
                totalPostersPages = data.totalPages;
                
            
                if (posters.length > 0) {
                    renderPostersGrid(posters, page === 1);
                    updateLoadMoreButton();
                } else {
                    showEmptyState();
                }
            } else {
                throw new Error('Failed to load posters: ' + (data.message || 'Unknown error'));
            }
        })
        .catch(error => {
            console.error('Error loading related posters:', error);
            showErrorState(error.message);
        });
}

function renderPostersGrid(posters, clearExisting = true) {
    const gridEl = document.getElementById('postersGrid');
    const loadingEl = document.getElementById('postersLoading');
    const emptyEl = document.getElementById('postersEmpty');
    
    if (clearExisting) {
        gridEl.innerHTML = '';
    }
    
    const currentPosterId = '<%=PosterId%>';
    let filteredPosters = posters.filter(poster => poster.poster_deck_id !== currentPosterId);
    
    console.log("All posters:", posters);
    console.log("Current poster ID:", currentPosterId);
    console.log("Filtered posters:", filteredPosters);
    
    if (filteredPosters.length === 0) {
        showEmptyState();
        return;
    }
    
    filteredPosters.forEach(poster => {
        const { 
            poster_deck_title, 
            poster_deck_id, 
            poster_deck_owner, 
            poster_preview_image
        } = poster;
        
        const hasPreview = poster_preview_image && poster_preview_image !== 'null';
        const previewImage = hasPreview ? poster_preview_image : '/images/default-poster-preview.jpg';
        
        const posterCard = `
            <a href="/event/poster/${poster_deck_id}" class="block h-full poster-card" target="_blank" rel="noopener noreferrer">
                <div class="h-full bg-white rounded-xl overflow-hidden shadow-card hover:shadow-card-hover transition-all duration-300 border border-gray-100 flex flex-col">
                    <!-- Image Container -->
                    <div class="poster-img-container flex-grow bg-gradient-to-br from-primary-50 to-primary-100 flex items-center justify-center overflow-hidden relative h-48">
                        <div class="absolute inset-0 bg-black bg-opacity-0 hover:bg-opacity-10 transition-all duration-300 z-10"></div>
                        ${hasPreview ? `
                            <img src="${previewImage}" 
                                 alt="${poster_deck_title}" 
                                 class="poster-image w-full h-full object-cover"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';" />
                        ` : ''}
